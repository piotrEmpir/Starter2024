{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"slug": "primary",
					"color": "#00dbff",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#10a5f5",
					"name": "Secondary"
				},
				{
					"slug": "tertiary",
					"color": "#0c71e0",
					"name": "Tertiary"
				},
				{
					"slug": "quaternary",
					"color": "#0859c6",
					"name": "Quaternary"
				},
				{
					"slug": "default-text",
					"color": "#1d1d1d",
					"name": "Text"
				}
			]
		},
		"spacing": {
            "spacingSizes": [
				{
                    "slug": "10",
                    "size": "10px",
                    "name": "XSmall(10)"
                },
				{
                    "slug": "20",
                    "size": "20px",
                    "name": "Small(20)"
                },
                {
                    "slug": "30",
                    "size": "30px",
                    "name": "Regular(30)"
                },
                {
                    "slug": "60",
                    "size": "60px",
                    "name": "Medium(60)"
                },
                {
                    "slug": "80",
                    "size": "80px",
                    "name": "Large(80)"
                },
				{
                    "slug": "100",
                    "size": "100px",
                    "name": "XLarge(100)"
                }
            ]
        },
		"typography": {
			"dropCap": false,
			"fluid" : true,
			"fontFamilies": [
				{
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
					"name": "Main font",
					"slug": "main-font"
				},
				{
					"fontFamily": "Oswald, \"Times New Roman\", serif",
					"name": "Secondary Font",
					"slug": "secondary-font"
				}
			],
			"fontSizes": [
				{
					"slug" : "xxl" ,
					"name" : "xxl" ,
					"size" :  "60px",
					"fluid": {
						"min": "40px",
						"max": "60px"
					}
				},
				{
					"slug" : "xl" ,
					"name" : "xl",
					"size" :  "50px",
					"fluid": {
						"min": "30px",
						"max": "50px"
					}
				},
				{
					"slug" : "lg" ,
					"name" : "lg",
					"size" :  "40px",
					"fluid": {
						"min": "25px",
						"max": "40px"
					}
				},
				{
					"slug" : "md" ,
					"name" : "md",
					"size" :  "30px",
					"fluid": {
						"min": "20px",
						"max": "30px"
					}
				},
				{
					"slug" : "sm" ,
					"name" : "sm",
					"size" :  "20px",
					"fluid": {
						"min": "16px",
						"max": "20px"
					}
				},
				{
					"slug" : "xs" ,
					"name" : "xs",
					"size" :  "18px",
					"fluid": {
						"min": "15px",
						"max": "18px"
					}
				},
				{
					"slug" : "xxs" ,
					"name" : "xxs",
					"size" :  "15px",
					"fluid": {
						"min": "15px",
						"max": "15px"
					}
				}
			]
		},
		"layout": {
			"contentSize": "1200px",
			"wideSize": "1500px"
		}
	},
	"styles": {
		"spacing": {
			"blockGap": "30px"
		},
		"blocks": {

		},
		"color": {
			"background": "#fff",
			"text": "var(--wp--preset--color-quaternary)"
		},
		"elements": {
			"button": {
				"typography": {
					"fontWeight": "500",
					"fontSize": "var(--wp--preset--font-size--sm)"
				},
				"spacing": {
					"padding": {
						"top": "10px",
						"right": "20px",
						"bottom": "10px",
						"left": "20px"
					},
					"margin": {
						"top": "1em"
					}
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "#fff"
				},
				"border": {
					"radius": "5px",
					"width": "2px"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "#fff"
					}
				}
			},

			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xxl)",
					"lineHeight": "1"
				},
				"spacing": {
					"margin": {
						"top": "0px",
						"bottom": "1em"
					}
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xl)",
					"lineHeight": "1"
				},
				"spacing": {
					"margin": {
						"top": "0px",
						"bottom": "1em"
					}
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--lg)",
					"lineHeight": "1.2em"
				},
				"spacing": {
					"margin": {
						"top": "0px",
						"bottom": "1em"
					}
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--md)"
				},
				"spacing": {
					"margin": {
						"top": "0px",
						"bottom": "1em"
					}
				}
			},
			"h5": {
				"typography": {
					"textTransform": "uppercase",
					"fontSize": "var(--wp--preset--font-size--sm)"
				},
				"spacing": {
					"margin": {
						"top": "0px",
						"bottom": "1em"
					}
				}
			},
			"h6": {
				"typography": {
					"textTransform": "uppercase",
					"fontSize": "var(--wp--preset--font-size--xs)"
				},
				"spacing": {
					"margin": {
						"top": "0px",
						"bottom": "1em"
					}
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--main-font)",
			"fontSize": "var(--wp--preset--font-size--sm)"
		}
	}
}
